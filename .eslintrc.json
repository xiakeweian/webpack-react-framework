{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "semi": ["error", "never"],
        "no-console": "off",
        // "indent": ["error", 4],
        "quotes": ["error", "single"],
        "spaced-comment": ["error", "always"],
        "comma-spacing": ["error", { "before": false, "after": true }],
        "no-dupe-keys": "error"
    }
}

